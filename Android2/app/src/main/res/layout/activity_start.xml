<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第六次作业"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_lv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/btn_start_lv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv1"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_lv2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_start" />

    <Button
        android:id="@+id/btn_start_lv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_lv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_lv1" />

    <Button
        android:id="@+id/btn_start_lv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_lv4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_lv2" />

    <Button
        android:id="@+id/btn_start_lv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_lv5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_lv3" />

    <Button
        android:id="@+id/btn_start_lv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_lv4" />

</androidx.constraintlayout.widget.ConstraintLayout>